generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model UserProfile {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @unique @db.Uuid // maps to Supabase auth.users.id
  role      String   @default("AGENT") // ADMIN, AGENT, AMBASSADOR
  fullName  String
  email     String
  avatarUrl String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ambassador Ambassador? @relation("UserAmbassador")
}

model Ambassador {
  id             String   @id @default(uuid()) @db.Uuid
  fullName       String
  email          String   @unique
  phone          String?
  country        String   @default("Israel")
  city           String
  languages      String // comma-separated: "Hebrew,English"
  occupation     String? // what they do for work
  hostsEvents    Boolean  @default(false)
  totalReferrals Int      @default(0)
  closedDeals    Int      @default(0)
  referralCode   String?  @unique
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  userProfileId String?      @unique @db.Uuid
  userProfile   UserProfile? @relation("UserAmbassador", fields: [userProfileId], references: [id])

  leads Lead[]
  deals Deal[]
  files AmbassadorFile[]
}

model Lead {
  id            String   @id @default(uuid()) @db.Uuid
  fullName      String
  email         String   @unique
  phone         String?
  country       String   @default("Israel")
  city          String?
  status        String   @default("New") // New, Contacted, Meeting1, Meeting2, Negotiation, Registration, Contract, NotRelevant
  dealType      String? // Investment, Vacation, Aliyah
  budget        String? // e.g. "1.5M-2M NIS"
  preferredArea String? // e.g. "Tel Aviv", "Herzliya"
  rooms         String? // e.g. "3-4"
  propertyType  String? // Apartment, Penthouse, Villa
  readiness     String? // Immediate, 3-6 months, 6-12 months, 12+ months
  source        String?  @default("manual") // manual, referral
  referralCode  String? // tracks which ambassador link was used
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  ambassadorId String?    @db.Uuid
  ambassador   Ambassador? @relation(fields: [ambassadorId], references: [id])

  deals     Deal[]
  tasks     LeadTask[]
  leadNotes LeadNote[]
}

model LeadTask {
  id        String   @id @default(uuid()) @db.Uuid
  subject   String
  dueDate   DateTime
  dueTime   String? // "HH:mm"
  completed Boolean  @default(false)
  createdAt DateTime @default(now())

  leadId String @db.Uuid
  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)
}

model LeadNote {
  id        String   @id @default(uuid()) @db.Uuid
  content   String
  createdAt DateTime @default(now())

  leadId String @db.Uuid
  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)
}

model Developer {
  id            String   @id @default(uuid()) @db.Uuid
  companyName   String // project name
  developerName String? // יזם name
  contactName   String // contact/sales person
  email         String   @unique
  phone         String?
  city          String? // project city
  buildAreas    String // comma-separated areas: "Tel Aviv,Herzliya"
  projectType   String // Apartment, Penthouse, Villa, Mixed
  apartmentMix  String? // apartment composition details
  priceRange    String? // e.g. "1M-3M NIS"
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  deals Deal[]
  files ProjectFile[]
}

model ProjectFile {
  id        String   @id @default(uuid()) @db.Uuid
  fileName  String
  fileUrl   String
  fileType  String // "pdf", "xlsx", etc.
  createdAt DateTime @default(now())

  developerId String    @db.Uuid
  developer   Developer @relation(fields: [developerId], references: [id], onDelete: Cascade)
}

model AmbassadorFile {
  id        String   @id @default(uuid()) @db.Uuid
  fileName  String
  fileUrl   String
  fileType  String // "pdf", "xlsx", etc.
  createdAt DateTime @default(now())

  ambassadorId String     @db.Uuid
  ambassador   Ambassador @relation(fields: [ambassadorId], references: [id], onDelete: Cascade)
}

model Deal {
  id        String   @id @default(uuid()) @db.Uuid
  stage     String   @default("Negotiation") // Negotiation, Contract, ClosedWon, ClosedLost
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leadId       String     @db.Uuid
  lead         Lead       @relation(fields: [leadId], references: [id])
  developerId  String     @db.Uuid
  developer    Developer  @relation(fields: [developerId], references: [id])
  ambassadorId String?    @db.Uuid
  ambassador   Ambassador? @relation(fields: [ambassadorId], references: [id])
}
